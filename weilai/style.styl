    margin 0
    padding 0

body
    background-color #fff
    color #000
    font-family "BlueSkyStandard","Microsoft Yahei",Palatino,Arial,sans-serif
    font-size 16px

ul,
ol 
    list-style none

a
    text-decoration none
    cursor pointer
    color #000

.header 
    padding 15px 40px
    font-size 12px
    font-weight 700
    position relative
    li
        cursor pointer
    .header-logo
        position absolute
        left 40px
        top 20px
        cursor pointer
    .header-order
        position absolute
        right 40px
        top 20px
        width 126px
        height 36px
        padding 0 10px
        margin 0 14px
        font-size 14px
        font-weight 700
        text-align center
        line-height 36px
        color #000000
        cursor pointer
        border 2px solid #000
        border-radius 100px
        &:hover
            background-color #000
            a
                color #fff
    .header-nav
        padding-left 162px        
    .header-nav-level0 
        display flex
        align-items center
        li
            position relative
            a:hover
                &:after
                    animation fadeIn .5s ease-out
                    animation-fill-mode forwards
            a:after
                content ''
                width 60%
                margin 0 auto
                height 2px
                position absolute
                left 50%
                bottom -15px
                transform translate(-50%)
                box-sizing border-box
        .header-nav-level0-li 
            padding 10px 20px 10px 20px
            margin-top 5px
        .arrow
            position relative
            padding-left 45px
            cursor default
            z-index 10
            ul
                background-color #fff
                position absolute
                left -1000px
                width 100%
                z-index 20
                padding-top 18px
                border-top 1px solid rgba(0,0,0,0.1)
                border-radius 0 0 12px 12px
                box-shadow 0 2px 4px 0 rgba(0,0,0,0.1)
                li
                    margin-bottom 12px
                    padding 0 20px
            &:hover
                border-radius 12px 12px 0 0
                box-shadow 0 2px 4px 0 rgba(0,0,0,0.1)
                &:before
                    transform rotate(135deg)
            .car-limit,
            .car-border
                color #9b9b9b
                cursor text
            &:before
                content ''
                position absolute
                left 20px
                top 13px
                width 5px
                height 5px
                border 2px solid rgba(50, 50, 50, .7)
                border-width 0 0 2px 2px
                transform rotate(-45deg)
        #car
            width 25px
            &:hover
                .car
                    position absolute
                    left 0px
                    top 36px
        #service
            width 50px
            &:hover
                .service
                    position absolute
                    left 0px
                    top 36px
        #nio
            width 45px
            &:hover
                .nio
                    position absolute
                    left 0px
                    top 36px

@media screen and (max-width 1024px)
    .header 
        background-color rgba(0,0,0,0.4)
        width 100%
        box-sizing border-box
        padding 8px 15px
        z-index 20
        position fixed
        top 0
    .header-logo,.header-nav,.header-order
        display none
    .header-logoMini
        display flex
        justify-content space-between
        align-items center
        .header-logoMini-nav
            display flex
            a
                border 1px solid #fff
                color #fff
                display inline-block
                padding 5px 18px 3px
                margin 0 5px
                margin-right 15px
                border-radius 15px
            .btn
                div
                    height 2px
                    width 20px
                    background-color #fff
                    margin 6px 0

@media screen and (min-width 1023px)
    .header-logoMini
        display none



