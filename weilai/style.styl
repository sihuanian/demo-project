@media screen and (min-width : 769px)
    .picture
        padding-left 20px
        overflow hidden
        .picture-item
            float left
            padding-bottom 15px
            width 50%
            position relative
            .picture-block
                position absolute
                left 50%
                top 60px
                text-align center
                transform translate(-50%)
                p,a
                    color #fff
                    text-align center
                    font-size 22px
                a
                    display block
                    margin 0 auto
                    border 2px solid #fff
                    border-radius 100px
                    width 210px
                    height 46px
                    line-height 46px
                    font-weight 700
                    &:hover
                        background-color #fff
                        color #000
                img
                    width 188px
        img
            width calc(100% - 20px)

@media screen and (max-width : 768px)
    .picture
        padding-left 0px
        overflow hidden
        .picture-item
            width 100%
            padding-bottom 5px
            position relative
            .picture-block
                position absolute
                left 50%
                top 60px
                text-align center
                transform translate(-50%)
                p,a
                    color #fff
                    text-align center
                    font-size 22px
                a
                    display block
                    margin 0 auto
                    border 2px solid #fff
                    border-radius 100px
                    width 210px
                    height 46px
                    line-height 46px
                    font-weight 700
                    &:hover
                        background-color #fff
                        color #000
                img
                    width 188px
        img
            width 100%


