body
    padding-top 30px

#anony-nav
    width 950px
    margin 0 auto 25px
    .anony-nav-links
        float right
        margin-top 6px  
    .anony-nav-links li
        display inline-block
        margin 0 0 0 17px
    .anony-nav-links li a
        display inline-block
        width 40px
        height 20px
        overflow hidden
        margin 0
        line-height 20em
        outline none
        vertical-align middle
        background transparent url(https://img3.doubanio.com/f/sns/8af21e61874a79a3728f00b0c45d36a794f53059/pics/sns/anony_home/anony_nav_logo.png) no-repeat 100% 100%
    .anony-nav-links li .lnk-book
        background-position 0 0
    .anony-nav-links li .lnk-movie
        background-position -60px 0
    .anony-nav-links li .lnk-music
        background-position -120px 0
    .anony-nav-links li .lnk-group
        background-position -180px 0
    .anony-nav-links li .lnk-events
        background-position -299px 0
    .anony-nav-links li .lnk-fm
        background-position -240px 0
    .anony-nav-links li .lnk-shijian
        margin-bottom 1px
        background transparent url(https://img3.doubanio.com/f/sns/b474dd402e4293943146a4789de3dae88ec96636/pics/sns/anony_home/ic_shijian_home_nav.png) no-repeat 100% 100%
        background-size cover
    .anony-nav-links li .lnk-market
        background-position -421px 0
        width 42px
    h1 
        display inline-block
        vertical-align middle
        width 160px
        height 34px
        margin 0 20px 0 0
        padding 0
        font-size 12px
        font-weight normal
        background url(https://img3.doubanio.com/f/sns/19886d443852bee48de2ed91f4a3bdfdaf8c809c/pics/nav/logo_db.png) no-repeat 0 0
        overflow hidden
        a
            display block
            height 34px
            line-height 10em

    .anony-srh
        position relative
        display inline-block
        vertical-align middle
        width 270px
        height 30px
        border 1px solid #c3c3c3
        .inp
            display block
            height 30px
            overflow hidden
        .inp input
            width 240px
            border none
            font-size 13px
            height 20px
            padding 5px
        .bn
            position absolute
            right 0
            top 0
            width 30px
            height 30px
            overflow hidden
            cursor pointer
            background url(https://img3.doubanio.com/f/sns/f71f15922ebd7c0ff0ea0e7a25577529efd8981a/pics/icon/bn_srh_1.png) no-repeat 50% 50%
            input
                border none 
                background transparent
                overflow hidden
                width 30px
                height 30px
                font-size 0
                color transparent
                cursor pointer

#anony-reg-new 
    margin-bottom 25px
    background-size contain
    background-position calc(50% - 305px) top
    background-repeat no-repeat
    background-color #edf4ed
    .login
        width 300px
        float right
        font-size 0
        letter-spacing -0.31em
    .app
        position absolute
        height 120px
        top 0
        bottom 0
        margin auto 0 auto 475px
    .app-title
        margin 7px 0
        font-size 25px
        color #111111
        line-height 24px
        span
            color #111111
            margin-left 10px
            font-weight 100
    .app-slogan
        margin 0 0 18px
        font-size 0
        color #111111
        text-rendering optimizeLegibility
        &::after
            content ""
            display inline-block
            width 100%
    .lnk-app
        display inline-block
        zoom 1
        padding 9px 21px
        margin-right 2px
        vertical-align top
        border-radius 2px
        font-size 12px
        background #00b51d
        color #fff
        line-height 1
    .app-qr
        display inline-block
        zoom 1
        position relation
    .lnk-qr
        display inline-block
        zoom 1
        border 1px solid #48aa0d
        border-radius 2
    .app-qr-expand
        display none
        position absolute
        top 0
        left 0
        padding 20px 20px 5px
        border-radius 2px
        text-align center
        font-style 13px
        color #666
        background #fff
        line-height 13px
        white-space nowrap

#anony-reg-new .lnk-app:link, #anony-reg-new .lnk-app:visited, #anony-reg-new .lnk-app:hover, #anony-reg-new .lnk-app:active
    background #00b51d
    color #FFF

#anony-reg-new .lnk-qr:link, #anony-reg-new .lnk-qr:visited, #anony-reg-new .lnk-qr:hover, #anony-reg-new .lnk-qr:active
    background transparent

#anony-reg-new .wrapper
    width 950px
    margin 0 auto
    position relative
    padding 0 0 4px
    overflow hidden
    zoom 1
    .login
        position relative
    &::before
        content ""
        position absolute
        top 0
        bottom 0
        left 0
        right 0
        z-index 0
        background-repeat no-repeat
        background-position 0 -150px

#anony-reg-new .wrapper .login,
#anony-reg-new .wrapper .app
    z-index 2

